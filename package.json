  },
  "homepage": "https://github.com/codeandconspire/maceo#readme",
  "dependencies": {
    "@vimeo/player": "^2.2.0",
    "normalize.css": "^7.0.0",
    "smoothscroll-polyfill": "^0.4.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "babel-preset-env": "^1.6.0",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "postcss": "^6.0.12",
    "postcss-cli": "^4.1.1",
    "postcss-csso": "^2.0.0",
